<?import org.controlsfx.control.CheckTreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="640.0"
            xmlns="http://javafx.com/javafx/8.0.111" fx:controller="thebob.ja2maptool.ui.tabs.vfs.VfsSetupTabView">
  <children>
    <BorderPane prefHeight="348.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <top>
        <Label text="Select VFS configs to load" BorderPane.alignment="CENTER"/>
      </top>
      <bottom>
        <GridPane BorderPane.alignment="CENTER">
          <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
          </columnConstraints>
          <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
          </rowConstraints>
          <children>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
              <children>
                <Button fx:id="config_add_dir" layoutX="43.0" layoutY="2.0" mnemonicParsing="false"
                        onMouseClicked="#config_add_dir_click" text="Add directory" AnchorPane.bottomAnchor="5.0"
                        AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="5.0"/>
              </children>
            </AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
              <children>
                <Button fx:id="config_load" layoutX="64.0" layoutY="-6.0" mnemonicParsing="false"
                        onMouseClicked="#config_load_click" text="Load" AnchorPane.bottomAnchor="5.0"
                        AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="5.0"/>
              </children>
            </AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2">
              <children>
                <ProgressBar fx:id="progress" layoutY="6.0" prefWidth="200.0" progress="0.0" visible="false"
                             AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0"
                             AnchorPane.topAnchor="5.0"/>
              </children>
            </AnchorPane>
          </children>
        </GridPane>
      </bottom>
      <center>
        <CheckTreeView fx:id="config_main" BorderPane.alignment="CENTER"/>
      </center>
    </BorderPane>
  </children>
</AnchorPane>
